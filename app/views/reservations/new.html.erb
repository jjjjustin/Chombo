<%= render "users/navbar" %>


<div class="col-md-3"></div>
  <div class="col-md-5">
    <h2>Make a tool reservation</h2>

    <%= simple_form_for([@tool, @reservation]) do |f| %>
      <%= f.error_notification %>
        <div class="form-group" input-type="text" >
            <%= f.input :start_day, :as => "string", input_html: { class: 'datepicker' }, required: true %>
            <%= f.input :end_day, :as => "string", input_html: { class: 'datepicker' }, required: true %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Reserve this tool" %>

        </div>
      <% end %>

