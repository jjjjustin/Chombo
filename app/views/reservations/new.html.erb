<h2>Make a tool reservation</h2>

<%= simple_form_for ([current_user, Reservation.new]) do |f| %>
  <%= f.error_notification %>
    <div class="form-inputs">
        <%= f.input :borrower_id %>
        <%= f.input :lender_id %>
        <%= f.input :tool_id %>
        <%= f.input :start_day, required: true %>
        <%= f.input :end_day %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Add tool"%>

    </div>
  <% end %>
