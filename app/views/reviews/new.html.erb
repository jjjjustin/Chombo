<%= render "users/navbar" %>


<div class="col-md-3"></div>
  <div class="col-md-5">
  <h2>Review <%= @user.first_name %></h2>
  <%= simple_form_for ([@user, @review]) do |f| %>
    <%= f.error_notification %>

          <%= f.input :review, required: true %>

          <%= f.select :rating, [1, 2, 3, 4, 5]  %>

      <div class="form-actions">
        <%= f.button :submit, "Review #{@user.first_name}"%>
      </div>
  </div>
</div>
    <% end %>
