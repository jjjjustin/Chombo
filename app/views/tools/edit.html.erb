<%= render "users/navbar" %>


<div class="col-md-3"></div>
  <div class="col-md-5">
  <h2>Update your tool listing</h2>
  <%= simple_form_for ([current_user, Tool.find(params[:id])]) do |f| %>
    <%= f.error_notification %>

          <%= f.input :kind, required: true %>
          <%= f.input :name, required: true %>
          <%= f.input :condition, required: true %>
          <%= f.input :description, required: true %>
          <%= f.file_field :image %>

      <div class="form-actions">
        <%= f.button :submit, "Update tool"%>
      </div>
  </div>
</div>
    <% end %>
