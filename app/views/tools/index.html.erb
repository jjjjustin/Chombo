<%= render "users/navbar" %>

<%= form_tag(tools_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search for tools" %>
<%= submit_tag "Search" %>
<% end %>


<% @tools.each do |tool| %>
  <div class="col-md-3">
    <div class="thumbnail">
      <%= image_tag tool.image.url(:medium) %>
      <h1 class="pad"><%= tool.kind %></h1>
      <p class="pad"><%= tool.name %></p>
      <%= link_to "View this tool", user_tool_path(current_user.id, tool.id) %>
    </div>
  </div>
<% end %>
