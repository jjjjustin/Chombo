<%= render "users/navbar" %>
<hr>
<h1 style="text-align: center">Selected Tool</h1>
<hr>
  <div class="col-md-3">
    <div class="thumbnail ">
      <%= image_tag @tool.image.url(:thumb) %>
      <h1 class="pad"><%= @tool.kind %></h1>
      <p class="pad"><%= @tool.name %></p>
      <p class="pad"><%= link_to "View the owner's profile", profile_view_path(@tool.user_id) %></p>

      <p class="pad"><%= link_to "Reserve now!", new_tool_reservation_path(@tool.id) %></p>
    </div>
  </div>


