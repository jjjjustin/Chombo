<h1>Visitors profile</h1>


<div class="row">
  <div class="col-sm-6 col-md-4 profile" >
    <div class="thumbnail">
      <%= image_tag @user.avatar.url %>
      <div class="caption">
        <h2 class="text-center"><%= @user.first_name %>  <%= @user.last_name %></h2>
        <h4 class="text-center"><%= @user.state %></h4>
        <h4 class="text-center"><%= @user.address %></h4>
        <div class="btn-group btn-group-justified" role="group" aria-label="...">
          <div class="btn-group" role="group">
            <button type="button" class="btn btn-primary">View tools</button>
          </div>
          <div class="btn-group" role="group">
            <button type="button" class="btn btn-primary">Add tools</button>
          </div>
          <div class="btn-group" role="group">
            <button type="button" class="btn btn-primary"><%= link_to "Edit profile", edit_user_path(current_user) %></button>
          </div>
        </div>
      </div>

    </div>
  </div>
